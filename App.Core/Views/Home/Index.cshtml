@model ViewConfigModel
@{
    ViewData["Title"] = "Home Page";
}
@*HOME VIEW*@
@section ViewStyles {
    <link rel="stylesheet" href="~/css/home.css" />
}

<div class="container home-page-container">
    <div class="row" id="mainLander">
        <div class="col-md-6 offset-md-6 home-lander-info">

                <div class="jumbotron" id="welcomeBox">
                    <h1>Bootstrap Tutorial</h1>
                    <p>Bootstrap is the most popular HTML, CSS...</p>
                </div>
                <div class="slider-container">
                    <div id="carouselInfoSlides" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/img/glassware.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/img/machine.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/img/pills.jpg" alt="Third slide">
                            </div>
                        </div>
                    </div>
                </div>

        </div>
    </div>


    
</div>

